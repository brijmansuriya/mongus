{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ], // '@/' points to the project root
      "@config/*": [
        "./config/*"
      ],
      "@db/*": [
        "./database/*"
      ],
      // Add aliases as needed
    },
  },  "include": [
    "*.ts",
    "**/*.ts"
  ]
}