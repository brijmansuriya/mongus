# Application Configuration
#-----------------------
# Node environment: development, production, or test
NODE_ENV=development
# Port number for the server
PORT=3000
# Application name displayed in logs and responses
APP_NAME=Mongus API
# API version for versioning endpoints
API_VERSION=v1

# Database Configuration
#----------------------
# MongoDB connection URI
# Format: mongodb://[username:password@]host[:port]/database[?options]
# Examples:
# - Local: mongodb://localhost:27017/your_database
# - Atlas: mongodb+srv://username:password@cluster.mongodb.net/your_database
MONGODB_URI=mongodb://localhost:27017/mongus_db
# Database debug mode (true/false)
MONGODB_DEBUG=false

# JWT Authentication
#-----------------
# Secret key for signing JWTs (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
# JWT token expiration (examples: 60, "2 days", "10h", "7d")
JWT_EXPIRES_IN=30d
# JWT cookie expiration in days
JWT_COOKIE_EXPIRES_IN=30
# Cookie security options
COOKIE_SECURE=false

# Security Configuration
#---------------------
# CORS allowed origins (comma-separated)
# Examples:
# - Single origin: http://localhost:3000
# - Multiple origins: http://localhost:3000,https://yourdomain.com
# - All origins: *
CORS_ORIGIN=http://localhost:3000
# Maximum request body size
BODY_LIMIT=10mb

# Rate Limiting
#-------------
# Time window for rate limiting in minutes
RATE_LIMIT_WINDOW=15
# Maximum number of requests per window
RATE_LIMIT_MAX=100
# Enable/disable rate limiting
RATE_LIMIT_ENABLED=true

# Logging Configuration
#--------------------
# Log levels: error, warn, info, debug
LOG_LEVEL=debug
# Enable/disable file logging
LOG_FILE_ENABLED=true
# Log file directory
LOG_DIR=logs
# Log file rotation size
LOG_MAX_SIZE=20m
# Days to keep log files
LOG_RETAIN_DAYS=14
# Enable/disable MongoDB logging
LOG_TO_DB=true
# Enable/disable console logging
LOG_TO_CONSOLE=true

# Email Configuration (Optional)
#----------------------------
# SMTP server settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
# Default email sender
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your App Name

# Cache Configuration
#------------------
# Cache TTL in seconds
CACHE_TTL=3600
# Enable/disable response caching
CACHE_ENABLED=true
# Maximum cache size in bytes
CACHE_MAX_SIZE=100000000

# Monitoring & Performance
#-----------------------
# Enable/disable request tracking
ENABLE_REQUEST_LOGGING=true
# Request timeout in milliseconds
REQUEST_TIMEOUT=5000
# Enable/disable performance metrics
ENABLE_METRICS=true

# Documentation
#-------------
# Enable/disable Swagger UI
SWAGGER_ENABLED=true
# Swagger UI path
SWAGGER_PATH=/api-docs

# Maintenance
#-----------
# Enable/disable maintenance mode
MAINTENANCE_MODE=false
# Maintenance mode message
MAINTENANCE_MESSAGE=System is under maintenance

# Feature Flags
#-------------
# Enable/disable user registration
ENABLE_REGISTRATION=true
# Enable/disable email verification
ENABLE_EMAIL_VERIFICATION=false
# Enable/disable 2FA
ENABLE_2FA=false
